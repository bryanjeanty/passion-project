[ <%= message.created_at.strftime('%I:%M %p') %> ] 
<strong>
    <%= message.user.firstname.capitalize %>:
</strong> 
    <%= message.content %>
    <% #if message.images.attached? %>
        <% message.images.each do |image| %>
            <%= image_tag(image, width: '200') %>
        <% end %>
    <% #end %>