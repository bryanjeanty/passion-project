<h1>Chatrooms</h1>

<%= form_with(model: @chatroom, url: chatrooms_path, method: :post) do |f| %>
    <%= f.label :enter_title %>
    <%= f.text_field :title %>
    <%= f.submit "Create Chatroom", class: "button is-primary" %>
<% end %>
<br>

<% if @chatrooms.length == 0 %>
        <p>No Chatrooms! Must Create One!</p>
<% else %>
    <% @chatrooms.each do |chatroom| %>
        <%= link_to chatroom.title, chatroom_path(chatroom) %>
        <%= link_to "Delete Chatroom", chatroom_path(chatroom), method: :delete, class: "button is-danger" %>

        <%= form_with(model: chatroom, url: chatroom_path(chatroom), method: :patch) do |f| %>
            <%= f.label :enter_title %>
            <%= f.text_field :title %>
            <%= f.submit "Update Chatroom", class: "button is-secondary" %>
        <% end %>
    <% end %>
<% end %>